{
  "openapi": "3.0.2",
  "info": {
    "title": "React Events API",
    "version": "1.0"
  },
  "servers": [{ "url": "http://localhost:3000/api" }],
  "paths": {
    "/user": {
      "post": {
        "tags": ["User API"],
        "description": "Register New User",
        "summary": "Register New User",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success Register User",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RegisterOrLoginResponse"
                }
              }
            }
          }
        }
      },
      "put": {
        "security": [
          {
            "auth": []
          }
        ],
        "tags": ["User API"],
        "description": "Update User Password",
        "summary": "Update User Password",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "password": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success Update User Password",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DefaultResponseWithoutData"
                }
              }
            }
          }
        }
      },
      "delete": {
        "security": [
          {
            "auth": []
          }
        ],
        "tags": ["User API"],
        "description": "Delete User",
        "summary": "Delete User",
        "responses": {
          "200": {
            "description": "Success Delete User Password",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DefaultResponseWithoutData"
                }
              }
            }
          }
        }
      }
    },
    "/user/login": {
      "post": {
        "tags": ["Auth API"],
        "description": "User Login",
        "summary": "User Login",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "account": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User Login Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RegisterOrLoginResponse"
                }
              }
            }
          }
        }
      }
    },
    "/user/logout": {
      "post": {
        "tags": ["Auth API"],
        "description": "User Logout",
        "summary": "User Logout",
        "responses": {
          "200": {
            "description": "Success Delete User Password",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DefaultResponseWithoutData"
                }
              }
            }
          }
        }
      }
    },
    "/event": {
      "post": {
        "security": [
          {
            "auth": []
          }
        ],
        "tags": ["Event API"],
        "description": "Create New Event",
        "summary": "Create New Event",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateOrUpdateEvents"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success Create New Event",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/EventObjectResponse"
                }
              }
            }
          }
        }
      },
      "get": {
        "tags": ["Event API"],
        "description": "Get List of Events",
        "summary": "Get List of Events",
        "responses": {
          "200": {
            "description": "Success Get List of Events",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/EventObjectResponse"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/event/upload": {
      "post": {
        "security": [
          {
            "auth": []
          }
        ],
        "tags": ["Event API"],
        "description": "Upload Event Image",
        "summary": "Upload Event Image",
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "file": {
                    "type": "string",
                    "format": "file"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success Upload Event Image",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": {
                      "type": "number"
                    },
                    "status": {
                      "type": "string"
                    },
                    "message": {
                      "type": "string"
                    },
                    "uploadedFile": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/event/{eventId}": {
      "get": {
        "tags": ["Event API"],
        "description": "Get Event by Id",
        "summary": "Get Event by Id",
        "parameters": [
          {
            "name": "eventId",
            "in": "path",
            "description": "Event Id",
            "schema": {
              "type": "integer"
            },
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Success Get Event",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/EventObjectResponse"
                }
              }
            }
          }
        }
      },
      "put": {
        "security": [
          {
            "auth": []
          }
        ],
        "tags": ["Event API"],
        "description": "Update Event Detail",
        "summary": "Update Event Detail",
        "parameters": [
          {
            "name": "eventId",
            "in": "path",
            "description": "Event Id",
            "schema": {
              "type": "integer"
            },
            "required": true
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateOrUpdateEvents"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success Delete Event",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DefaultResponseWithoutData"
                }
              }
            }
          }
        }
      },
      "delete": {
        "security": [
          {
            "auth": []
          }
        ],
        "tags": ["Event API"],
        "description": "Delete Event",
        "summary": "Delete Event",
        "parameters": [
          {
            "name": "eventId",
            "in": "path",
            "description": "Event Id",
            "schema": {
              "type": "integer"
            },
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Success Delete Event",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DefaultResponseWithoutData"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "auth": {
        "type": "apiKey",
        "in": "cookie",
        "name": "jwt",
        "description": "Authentication for API"
      }
    },
    "schemas": {
      "CreateOrUpdateEvents": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "eventDate": {
            "type": "string"
          },
          "eventTime": {
            "type": "string"
          },
          "eventLocation": {
            "type": "string"
          },
          "eventImage": {
            "type": "string"
          },
          "userId": {
            "type": "integer"
          }
        }
      },
      "RegisterOrLoginResponse": {
        "type": "object",
        "properties": {
          "code": {
            "type": "number"
          },
          "status": {
            "type": "string"
          },
          "message": {
            "type": "string"
          },
          "data": {
            "type": "object",
            "properties": {
              "userId": {
                "type": "integer"
              },
              "token": {
                "type": "string"
              }
            }
          }
        }
      },
      "DefaultResponseWithoutData": {
        "type": "object",
        "properties": {
          "code": {
            "type": "number"
          },
          "status": {
            "type": "string"
          },
          "message": {
            "type": "string"
          }
        }
      },
      "EventObjectResponse": {
        "type": "object",
        "properties": {
          "eventsId": {
            "type": "integer"
          },
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "eventDate": {
            "type": "string"
          },
          "eventTime": {
            "type": "string"
          },
          "eventLocation": {
            "type": "string"
          },
          "eventImage": {
            "type": "string"
          },
          "userId": {
            "type": "integer"
          }
        }
      }
    }
  }
}
